@using Accounting.DATA.Entity
@model Bank
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Banka Güncelle</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Bank/Index">Bankalar</a></li>
                    <li class="breadcrumb-item active">Banka Güncelle</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Banka Güncelle</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form action="/Bank/Update" method="post">
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Name">Banka İsmi</label>
                                <input type="text" class="form-control" id="Name" placeholder="İsim Giriniz" name="Name" value="@Model.Name">
                            </div>
                            <div class="form-group">
                                <label for="BankName">Banka</label>
                                <input type="text" class="form-control" id="BankName" placeholder="Banka Giriniz" name="BankName" value="@Model.BankName">
                            </div>
                            <div class="form-group">
                                <label for="BankBranch">BankBranch</label>
                                <input type="text" class="form-control" id="Description" placeholder="Banka Şubesi Giriniz" name="BankBranch" value="@Model.BankBranch">
                            </div>
                            <div class="form-group">
                                <label for="AccountNo">AccountNo</label>
                                <input type="text" class="form-control" id="AccountNo" placeholder="AccountNo Giriniz" name="AccountNo" value="@Model.AccountNo">
                            </div>
                            <div class="form-group">
                                <label for="Iban">Iban</label>
                                <input type="text" class="form-control" id="Iban" placeholder="Iban Giriniz" name="Iban" value="@Model.Iban">
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Kasa Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

