@using Accounting.DATA.Entity
@model IEnumerable<Check>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">DataTable with default features</h3>
                        <a class="btn btn-primary" href="/Check/Add?Kind=0" style="float:right">
                            Yeni Verilen Çek/Senet
                        </a>

                        <a class="btn btn-primary mr-3" href="/Check/Add?Kind=1" style="float:right">
                            Yeni Alınan Çek/Senet
                        </a>
                    </div>
                    <!-- /.card-header -->

                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>İsmi</th>
                                    <th>Tarih</th>
                                    <th>Durum</th>
                                    <th>Vade Tarihi</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.Date</td>
                                            <td>@item.Status</td>
                                            <td>@item.ExpiryDate</td>
                                            <td>
                                                <a class="btn btn-warning" href="/Check/Update?CheckId=@item.Id">Güncelle</a>
                                                <a class="btn btn-info" href="/Check/Detail?CheckId=@item.Id">Detay</a>
                                                <a class="btn btn-danger" onclick="Sil('@item.Id')">Sil</a>
                                            </td>
                                        </tr>
                                    }

                                }

                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(function () {
        $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    });
</script>

