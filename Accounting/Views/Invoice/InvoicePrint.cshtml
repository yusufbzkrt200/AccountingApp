@using Accounting.DATA.Entity
@model Invoice
@{
    ViewData["Title"] = "InvoicePrint";
    Layout = null;
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/AdminLTE-3.2.0/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLTE-3.2.0/dist/css/adminlte.min.css">
}

<div class="wrapper">
    <!-- Main content -->
    <section class="invoice">
        <!-- title row -->
        <div class="row">
            <div class="col-12">
                <h2 class="page-header">
                    <i class="fas fa-globe"></i> AdminLTE, Inc.
                    <small class="float-right">Date: 2/10/2014</small>
                </h2>
            </div>
            <!-- /.col -->
        </div>
        <!-- info row -->
        <div class="row invoice-info">
            <div class="col-sm-4 invoice-col">
                From
                <address>
                    <strong>@Model.User.Name @Model.User.Surname</strong><br>
                    @Model.User.Address<br>
                    Phone: @Model.User.Phone<br>
                    Email: @Model.User.Email
                </address>
            </div>
            <!-- /.col -->
            <div class="col-sm-4 invoice-col">
                To
                <address>
                    <strong>@Model.Customer.Name</strong><br>
                    @Model.Customer.Address<br>
                    Phone: @Model.Customer.Phone<br>
                    Email: @Model.Customer.Email
                </address>
            </div>
            <!-- /.col -->
            <div class="col-sm-4 invoice-col">
                <b>Invoice #007612</b><br>
                <br>
                <b>Order ID:</b> 4F3S8J<br>
                <b>Fatura Tarihi :</b> @Model.CreatedOn.ToString("dd/MM/yyyy")<br>
                <b>Account:</b> 968-34567
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- Table row -->
        <div class="row">
            <div class="col-12 table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Qty</th>
                            <th>Product</th>
                            <th>Serial #</th>
                            <th>Description</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Transactions)
                        {
                            <tr>
                                <td>@item.Amount</td>
                                <td>@item.Product.Name</td>
                                <td>@item.Product.Code</td>
                                <td>@item.Product.Description</td>
                                <td>@item.Product.Price</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->

        <div class="row">
            <!-- accepted payments column -->
            <div class="col-6">
                <p class="lead">Payment Methods:</p>
                <img src="~/AdminLTE-3.2.0/dist/img/credit/visa.png" alt="Visa">
                <img src="~/AdminLTE-3.2.0/dist/img/credit/mastercard.png" alt="Mastercard">
                <img src="~/AdminLTE-3.2.0/dist/img/credit/american-express.png" alt="American Express">
                <img src="~/AdminLTE-3.2.0/dist/img/credit/paypal2.png" alt="Paypal">

                <p class="text-muted well well-sm shadow-none" style="margin-top: 10px;">
                    Etsy doostang zoodles disqus groupon greplin oooj voxy zoodles, weebly ning heekya handango imeem plugg dopplr
                    jibjab, movity jajah plickers sifteo edmodo ifttt zimbra.
                </p>
            </div>
            <!-- /.col -->
            <div class="col-6">
                <p class="lead"><b>   @DateTime.Now.ToString("dd/MM/yyyy")</b></p>

                <div class="table-responsive">
                    <table class="table">
                        <tr>
                            <th style="width:50%">Subtotal:</th>
                            <td>@Model.SubTotal</td>
                        </tr>
                        <tr>
                            <th>Tax</th>
                            <td>@Model.TotalVat</td>
                        </tr>
                        <tr>
                            <th>Shipping:</th>
                            <td>Kargo Ücreti olacak mı?</td>
                        </tr>
                        <tr>
                            <th>İndirim:</th>
                            <td>@Model.TotalDiscount</td>
                        </tr>
                        <tr>
                            <th>Total:</th>
                            <td>@Model.Total</td>
                        </tr>
                    </table>
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- ./wrapper -->
<!-- Page specific script -->
<script>
    window.addEventListener("load", window.print());
</script>

